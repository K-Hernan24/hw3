<h1>New Entry</h1>

<!-- Create a form to generate a new entry -->
<form action="/entries" method="post">
<p>
<label for="title">Title</label>
<input type="text" name="title">
<label for="description">Description</label>
<input type="text" name="description">
<label for="occured_on">Occured on</label>
<input type="date" name="occured_on">
</p>

<!-- Transfer state from Place selection to entry generation -->
<p>
<label for="place_id">Place</label>
<input type="text" name="place_id" value="<%= params["place_id"]%>">
</p>

<button>Submit</button>

</form>